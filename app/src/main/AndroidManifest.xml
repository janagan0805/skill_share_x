<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.skillsharex">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SkillShare X"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Material.Light.NoActionBar">


    <!-- Single launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- You can safely delete LoginActivity, SplashActivity, "splash screen.kt"
             from project and remove any extra <activity> tags that were here. -->

    </application>

</manifest>
